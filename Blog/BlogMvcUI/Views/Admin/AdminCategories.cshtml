@model BlogMvcUI.Models.AdminCategoriesViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AdminCategories";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*---Add New Category---*@
<a class="btn btn-success" asp-action="Add" asp-controller="Category">Add New Category</a>

<br /><br />

@*---Admin Category Table---*@
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Category Name</th>
            <th scope="col" colspan="2" style="text-align:center;">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.CategoryName</td>
                <td><a class="btn btn-info" asp-action="Update" asp-controller="Category" asp-route-categoryId="@category.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-categoryId="@category.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

