@model BlogMvcUI.Models.CategoryAddViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*---Add Category Form---*@
<form asp-controller="Category" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="@Model.CategoryName"></label>
        <input asp-for="@Model.CategoryName" class="form-control" />
        <span asp-validation-for="@Model.CategoryName"></span>
    </div>

    <button type="submit" class="btn btn-success btn-lg btn-block">Add Category</button>
</form>

