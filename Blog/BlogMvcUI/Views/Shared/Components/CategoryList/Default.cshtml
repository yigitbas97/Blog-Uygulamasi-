@model BlogMvcUI.Models.CategoryListViewModel;


<div class="list-group">
    <a class="list-group-item list-group-item-action" style="text-align:center;">
        KATEGORİLER
    </a>

    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";

        <a href="/post/index?categoryId=@category.Id&page=1" class="@css">@category.CategoryName</a>
    }
</div>


