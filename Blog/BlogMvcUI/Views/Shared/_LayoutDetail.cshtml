@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    @*---Jumbotron---*@
    <div class='row m-0'>
        <div class='jumbotron jumbotron-fluid img-fluid m-0 p-0 d-flex justify-content-center align-items-center' style='width: 100%;  background-image: url("https://ademkomurcu.com.tr/wp-content/uploads/2018/11/programlama-ogrencek-olanalara-oneriler.jpg"); height: 45.5vh; min-height: 30.5vmin; background-repeat: no-repeat; background-size: cover; background-position: center center; flex-center;'>
            <div class='col-12 mb-md-2 mx-auto text-center'>
                <h1 class='h1-reponsive text-success text-uppercase font-weight-bold mb-0 pt-md-5 pt-5'>
                    <a asp-action="Index" asp-controller="Post"> <strong class='text-capitalize' style="color:white;">YİĞİT'İN BLOGU</strong> </a>
                </h1>
                <h5 class='h5-responsive text-uppercase text-success'>
                    <strong style="color:white;">Yazılım Dünyası</strong>
                </h5>
                <hr class='hr-light my-2 d-none d-md-block' style='width: 70%; border: 1.5px solid white;' />
            </div>
        </div>
    </div>

    @*---Message Control---*@
    <div class="container" style="margin-top:10px; text-align:center;">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-warning" role="alert">@TempData["message"]</div>
        }
    </div>

    @*---Grid---*@
    <div class="container-fluid">
        <div class="row">
            @*---Left 3 Columns---*@
            <div class="col-md-3">
                @*---Category List---*@
                @await Component.InvokeAsync("CategoryList")


                @*---Search---*@
                <div class="card my-4">
                    <h5 class="card-header">Search</h5>
                    <div class="card-body">
                        <form asp-action="Search" asp-controller="Post">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for..." name="searchedWord">
                                <span class="input-group-btn">
                                    <button class="btn btn-secondary" type="submit">Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @*---Right 9 Columns Post Content---*@
            <div class="col-md-9">
                @RenderBody()
            </div>

        </div>
    </div>

    @*---Scripts---*@
    <script src="~/bootstrap/jquery/jquery-3.4.1.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <script src="~/bootstrap/jquery/jquery.validate.js"></script>
    <script src="~/bootstrap/jquery/jquery.validate.unobtrusive.js"></script>



</body>
</html>
